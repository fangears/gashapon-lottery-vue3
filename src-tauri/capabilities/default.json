{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$APPDATA/film_images" }, { "path": "$APPDATA/film_images/*" }, { "path": "$APPDATA/image_library" }, { "path": "$APPDATA/image_library/*" }]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [{ "path": "$APPDATA/film_images" }, { "path": "$APPDATA/image_library" }]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "$APPDATA/film_images/*" }, { "path": "$APPDATA/image_library/*" }]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "$APPDATA/film_images/*" }, { "path": "$APPDATA/image_library/*" }]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [{ "path": "$APPDATA/film_images/*" }, { "path": "$APPDATA/image_library/*" }]
    }
  ]
}
